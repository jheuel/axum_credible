{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "timezone": "Europe/Berlin",
    "extends": [
        "config:recommended",
        "helpers:pinGitHubActionDigests",
        ":configMigration",
        ":pinDevDependencies",
        ":dependencyDashboard",
        "docker:pinDigests",
        "preview:dockerCompose",
        "preview:dockerVersions",
        "schedule:automergeEarlyMondays"
    ],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "minor",
                "patch",
                "pin",
                "digest"
            ],
            "automerge": true
        }
    ]
}
